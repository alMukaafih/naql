{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": false,
    "outDir": "./dist",
    "rootDir": "templates",
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "@acode-app/types"
    ]
  },
  "include": [
    "templates"
  ]
}